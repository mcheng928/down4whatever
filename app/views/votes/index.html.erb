<div class="page-header">
  <h1>
    Votes
    <a href="/votes/new" class="btn btn-lg btn-success">New Vote</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Choice</th>
        <th>Guest</th>
        <th>Actions</th>
      </tr>

      <% @votes.each do |vote| %>
      <tr>
        <td>
          <% if vote.choice.present? %>
            <a href="/choices/<%= vote.choice.id %>">
              <%= vote.choice.event_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if vote.guest.present? %>
            <a href="/users/<%= vote.guest.id %>">
              <%= vote.guest.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/votes/<%= vote.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == vote.guest %>
            <a href="/votes/<%= vote.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_vote/<%= vote.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @votes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
