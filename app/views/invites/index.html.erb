<div class="page-header">
  <h1>
    Invites
    <a href="/invites/new" class="btn btn-lg btn-success">New Invite</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event</th>
        <th>Guest</th>
        <th>Actions</th>
      </tr>

      <% @invites.each do |invite| %>
      <tr>
        <td>
          <% if invite.event.present? %>
            <a href="/events/<%= invite.event.id %>">
              <%= invite.event.title %>
            </a>
          <% end %>
        </td>
        <td>
          <% if invite.guest.present? %>
            <a href="/users/<%= invite.guest.id %>">
              <%= invite.guest.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/invites/<%= invite.id %>" class="btn btn-primary">Show</a>
          <a href="/invites/<%= invite.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_invite/<%= invite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @invites, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
